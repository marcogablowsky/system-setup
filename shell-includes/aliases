alias grep='grep --color'
alias c=clear
alias ls='c && ls -lh --color=auto'
alias lsa='c && ls -lah'

# folder navigation shortcuts
alias gr='cd $GITROOT'
alias dl='cd ~/Downloads'

# config files -> prefix 'cf'
alias cfg='vim ~/.gitconfig'
alias cfi='vim ~/.i3/config'
alias cfr='vim ~/.config/ranger/rc.conf'
alias cfv='vim ~/.vimrc'
alias cfz='vim ~/.zshrc'

# programm shortcuts
alias g=git
alias r=ranger
alias vi=vim
alias v=vi

alias tt='gtypist ktde.typ'

alias mb='mvn clean install -DskipTests -T 4'
alias mm='mb -pl -am'
