" turn off vi compatibility mode
set nocompatible

" add ** to searchpath, allows 'fuzzy' filesearch
set path+=**

set encoding=utf-8

" display current and relative line numbers
set relativenumber
set number

" command line completion
set wildmenu

set tabstop=4 softtabstop=0 expandtab shiftwidth=4 smarttab

" disable line wrapping
set nowrap

set noswapfile

" ignore case when using search pattern
set ic

" underline current line
set cursorline

" show matching braces
set showmatch 

" split behaviour and navigation
set splitbelow
set splitright
nnoremap <C-J> <C-W><C-j>
nnoremap <C-H> <C-W><C-h>
nnoremap <C-K> <C-W><C-k>
nnoremap <C-L> <C-W><C-l>

" folding
set foldmethod=indent
set foldlevel=99
nnoremap <space> za

" enable file type detection
filetype plugin indent on

" syntax highlighting
syntax enable

" full python syntax highlighting
let python_highlight_all=1

" Colorscheme
set background=light
colorscheme solarized
set notgc
hi Normal ctermbg=none

call plug#begin()

Plug 'vim-airline/vim-airline'
Plug 'jnurmine/Zenburn'
Plug 'altercation/vim-colors-solarized'

call plug#end()

let g:netrw_banner=0

let g:ale_lint_on_text_changed = 'never'
let g:ale_fixers = {
\   'javascript': ['eslint']
\ }

autocmd BufRead,BufNewFile *.md setlocal spell spelllang=de_de

